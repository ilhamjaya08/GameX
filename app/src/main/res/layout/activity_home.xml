<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gamex_surface_dark"
    android:paddingHorizontal="20dp"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/headerContainer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="4dp"
        android:layout_marginEnd="4dp"
        android:layout_marginTop="20dp"
        android:foreground="?attr/selectableItemBackground"
        android:padding="0dp"
        app:cardBackgroundColor="@android:color/transparent"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_home_gradient"
            android:padding="18dp">

            <ImageView
                android:id="@+id/headerLogo"
                android:layout_width="120dp"
                android:layout_height="48dp"
                android:contentDescription="@string/app_name"
                android:scaleType="fitStart"
                android:src="@drawable/header_gamex"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <LinearLayout
                android:id="@+id/headerActionContainer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/ordersButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:layout_marginEnd="12dp"
                    android:background="@drawable/bg_icon_button"
                    android:contentDescription="@string/home_action_orders"
                    android:padding="10dp"
                    android:src="@drawable/icons_orders"
                    android:tint="@color/gamex_text_primary" />

                <ImageView
                    android:id="@+id/accountButton"
                    android:layout_width="44dp"
                    android:layout_height="44dp"
                    android:background="@drawable/bg_icon_button"
                    android:contentDescription="@string/home_action_account"
                    android:padding="10dp"
                    android:src="@drawable/icons_account"
                    android:tint="@color/gamex_text_primary" />

            </LinearLayout>

            <TextView
                android:id="@+id/headerGreeting"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="@string/home_header_greeting"
                android:textColor="@color/gamex_text_primary"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerLogo" />

            <TextView
                android:id="@+id/headerSubtitle"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/home_header_subtitle"
                android:textColor="@color/gamex_text_secondary"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerGreeting" />

            <com.google.android.material.button.MaterialButton
                android:id="@+id/logoutButton"
                style="?attr/materialButtonStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:text="@string/home_topup"
                android:textAllCaps="false"
                android:textColor="@color/gamex_surface_dark"
                android:textStyle="bold"
                app:backgroundTint="@color/gamex_green"
                app:cornerRadius="26dp"
                app:icon="@drawable/icons_topup"
                app:iconGravity="textStart"
                app:iconPadding="12dp"
                app:iconTint="@color/gamex_surface_dark"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/headerSubtitle" />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </com.google.android.material.card.MaterialCardView>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/gameRecyclerView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="4dp"
        android:paddingEnd="4dp"
        android:paddingTop="24dp"
        android:paddingBottom="72dp"
        app:layout_constraintBottom_toTopOf="@id/footerText"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/headerContainer" />

    <TextView
        android:id="@+id/footerText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:textColor="@color/gamex_text_secondary"
        android:textSize="12sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Â© GameX 2025. All rights reserved." />

</androidx.constraintlayout.widget.ConstraintLayout>
